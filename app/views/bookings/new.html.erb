<div class="container mt-5">
  <h1>Book Now!</h1>

<div class="container">
  <div class="bio-card">
    <div class="inner-card">
      <h1><%= @celeb.first_name %> <%= @celeb.last_name %></h1>
        <div class="inner-row">
          <img class="bio-image" src="<%= @celeb.photo_url %>" alt="Card image cap">
            <div class="bio-text position-relative">
             <%= simple_form_for [@celeb, @booking] do |f| %>
                <%= f.input :booking_date, as: :datetime, html5: true %>
                <%= f.input :duration, label: "Number of hours", as: :integer %>
                <%= f.input :description, label: "Message", as: :string %>
                <div class="d-flex justify-content-between align-items-center">
                  <div>
                    <h3>Price</h3>
                    <p class="show-price"><strong> <%= @celeb.price %></strong>  Â£/h</p>
                  </div>
                <%= f.submit "Book #{@celeb.first_name}", class: "btn btn-flat" %>
                </div>
              <% end %>
            </div>
        </div>
    </div>
  </div>
</div>
